{
  "framework": "nextjs",
  "buildCommand": "expo export:web",
  "outputDirectory": "web-build",
  "devCommand": "expo start --web",
  "installCommand": "npm install",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://bpay-backend.onrender.com/api"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}